        "test:search:debug": "playwright test tests/Browser/MerchantSearchAndFiltersTest.js --debug",
        "test:search:mobile": "playwright test tests/Browser/MerchantSearchAndFiltersTest.js --project='Mobile Chrome' --project='Mobile Safari'",
        "test:search:desktop": "playwright test tests/Browser/MerchantSearchAndFiltersTest.js --project=chromium --project=firefox --project=webkit",

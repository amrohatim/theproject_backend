{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "test": "playwright test",
        "test:headed": "playwright test --headed",
        "test:debug": "playwright test --debug",
        "test:license": "playwright test tests/Browser/LicenseManagementTest.js",
        "test:license:headed": "playwright test tests/Browser/LicenseManagementTest.js --headed",
        "test:license:debug": "playwright test tests/Browser/LicenseManagementTest.js --debug",
        "test:search": "playwright test tests/Browser/MerchantSearchAndFiltersTest.js",
